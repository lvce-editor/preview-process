{
  "name": "@lvce-editor/preview-process",
  "version": "0.0.0-dev",
  "description": "Preview Process",
  "main": "src/previewProcessMain.ts",
  "bin": {
    "preview-process": "bin/previewProcess.js"
  },
  "type": "module",
  "scripts": {
    "test": "node --unhandled-rejections=warn --experimental-vm-modules ./node_modules/jest/bin/jest.js --detectOpenHandles --forceExit",
    "test:watch": "node --unhandled-rejections=warn --experimental-vm-modules ./node_modules/jest/bin/jest.js --watch",
    "type-check": "tsc",
    "build": "node scripts/build.js",
    "build:watch": "nodemon"
  },
  "keywords": [
    "Lvce Editor",
    "Preview"
  ],
  "author": "Lvce Editor",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lvce-editor/preview-process.git"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@lvce-editor/assert": "^1.3.0",
    "@lvce-editor/ipc": "^12.0.0",
    "@lvce-editor/json-rpc": "^5.3.0",
    "@lvce-editor/rpc": "^1.13.0",
    "@lvce-editor/verror": "^1.6.0"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.26.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@types/node": "^20.12.11",
    "execa": "^9.5.2",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.4.2",
    "rollup": "^4.21.1",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2"
  },
  "xo": {
    "rules": {
      "unicorn/filename-case": "off",
      "indent": "off",
      "semi": "off",
      "no-unused-vars": "off",
      "unicorn/numeric-separators-style": "off",
      "no-extra-semi": "off",
      "arrow-body-style": "off",
      "padded-blocks": "off",
      "capitalized-comments": "off",
      "padding-line-between-statements": "off",
      "arrow-parens": "off",
      "no-warning-comments": "off",
      "array-bracket-spacing": "off",
      "comma-spacing": "off",
      "unicorn/no-array-callback-reference": "off",
      "comma-dangle": "off",
      "operator-linebreak": "off",
      "no-case-declarations": "off",
      "no-undef": "off",
      "object-curly-spacing": "off",
      "object-shorthand": "off",
      "complexity": "off",
      "no-labels": "off",
      "no-multi-assign": "off",
      "max-params": "off",
      "no-bitwise": "off",
      "unicorn/prefer-math-trunc": "off",
      "no-await-in-loop": "off",
      "unicorn/prefer-add-event-listener": "off",
      "no-unused-expressions": "off",
      "node/prefer-global/process": "off",
      "unicorn/prevent-abbreviations": "off",
      "unicorn/no-process-exit": "off",
      "quotes": "off",
      "n/prefer-global/process": [
        "error",
        "always"
      ]
    },
    "ignores": [
      "distmin"
    ]
  },
  "jest": {
    "injectGlobals": false,
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 130
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts,js",
    "exec": "node scripts/build.js"
  }
}
